@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>AdminLTE 3 | Dashboard 3</title>
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>

<body class="hold-transition sidebar-mini">

    <div class="wrapper">
        <aside class="main-sidebar sidebar-dark-primary elevation-4">

            <a href="index3.html" class="brand-link">
                <img src="~/AdminLTE-3.0.4/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Hastane Otomasyon</span>
            </a>



            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="image">
                            <img src="~/AdminLTE-3.0.4/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                        </div>
                        <div class="info">
                            <a asp-controller="account" asp-action="manage" class="d-block">@User.Identity.Name</a>
                        </div>
                    }
                    else
                    {
                        <p>deneme</p>
                    }
                </div>

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item has-treeview">
                                <a href="/Doctor/Index" class="nav-link">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>
                                        Doktorlar
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Patient/Index" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Hastalar
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item has-treeview">
                                <a href="/Appointment/Index" class="nav-link">
                                    <i class="nav-icon fas fa-copy"></i>
                                    <p>
                                        Randevular
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item has-treeview">
                                <a href="/Default/Index" class="nav-link">
                                    <i class="nav-icon fas fa-copy"></i>
                                    <p>
                                        Ayarlar
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item has-treeview">
                                <a asp-controller="account" asp-action="logout" class="nav-link">
                                    <i class="nav-icon fas fa-apple-alt"></i>
                                    <p>
                                        Çıkış yap
                                    </p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item has-treeview">
                                <a asp-controller="account" asp-action="login" class="nav-link">
                                    <i class="nav-icon fas fa-apple-alt"></i>
                                    <p>
                                        Giriş yap
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item has-treeview">
                                <a asp-controller="account" asp-action="register" class="nav-link">
                                    <i class="nav-icon fas fa-apple-alt"></i>
                                    <p>
                                        Kayıt Ol
                                    </p>
                                </a>
                            </li>

                        }

                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/chart.js/Chart.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/pages/dashboard3.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>