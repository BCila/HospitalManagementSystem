@using HastaneOtomasyon.Models
@model SpecializationVM


<table class="table table-bordered table-hover">

    <tr>
        <th>Uzmanlık alanı</th>
        <th></th>
    </tr>
    @foreach (var spec in Model.Specializations)
    {
        <tr>
            <td>@spec.Name</td>
        </tr>
    }
</table>


@*<form asp-action="SpecializationCreate" asp-controller="Specialization" method="post">

</form>*@


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Country Add</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-action="SpecializationCreate" asp-controller="Specialization" method="post">
                    @Html.LabelFor(x => x.Specialization.Name)
                    @Html.TextBoxFor(x => x.Specialization.Name, new { @class = "form-control" })

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                            <i class="bi bi-x-square"></i>
                        </button>
                        <button type="submit" class="btn btn-success"><i class="bi bi-plus"></i></button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
@*Country Add Modal Buton*@
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">
    <i class="bi bi-plus"></i>
</button>