@model Patient

<form asp-action="CreatePatient" method="post" asp-controller="Patient">
    <h3 class="text-secondary">Hasta Ekle</h3>
    <div class="mb-3">
        <label asp-for="Name">İsim</label>
        <input asp-for="Name" placeholder="İsim" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Surname">Soyisim</label>
        <input asp-for="Surname" placeholder="Soyisim" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ContactNo">Telefon Numarası</label>
        <input asp-for="ContactNo" placeholder="Telefon Numarası" class="form-control" type="number"/>
    </div>
    <div class="mb-3">
        <label asp-for="DateOfBirth">Doğum Tarihi</label>
        <input asp-for="DateOfBirth" placeholder="Doğum Tarihi" class="form-control" type="date"/>
    </div>
    <div class="mb-3">
        <label asp-for="Height">Boy</label>
        <input asp-for="Height" placeholder="Boy(cm)" class="form-control" type="number"/>
    </div>
    <div class="mb-3">
        <label asp-for="Weight">Kilo</label>
        <input asp-for="Weight" placeholder="Kilo(kg)" class="form-control" type="number"/>
    </div>
    <div class="mb-3">
        <label asp-for="Gender">Cinsiyet</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Gender" value="Kadın" />
            <label class="form-check-label">Kadın</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Gender" value="Erkek" />
            <label class="form-check-label">Erkek</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Gender" value="Diğer" />
            <label class="form-check-label">Diğer</label>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-success">Ekle</button>
    <button asp-action="Index" asp-controller="Patient" class="btn btn-outline-info">Listeye Geri Dön</button>
</form>
