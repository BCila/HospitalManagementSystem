@model List<Doctor>



<div class="container">
    <div class="row pt-5">
        <div class="col-sm-12">
            <form asp-action="SearchDoctor" asp-controller="Doctor" method="get" class="d-inline">
                <input autocomplete="off" name="searchValue" type="search" placeholder="ara" />
                <button type="submit"><i class="fas fa-search"></i> Ara</button>
            </form>
            <a asp-action="CreateDoctor" asp-controller="Doctor" class="btn btn-success mb-3 float-right">Yeni Doktor Ekle</a>
            <table class="table table-striped table-hover">
                <thead class="bg-dark">
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Cinsiyet</th>
                        <th>Adres</th>
                        <th>Uzmanlık Alanı</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doctor in Model)
                    {
                        <tr>
                            <td>@doctor.Name</td>
                            <td>@doctor.Surname</td>
                            <td>@doctor.Gender</td>
                            <td>@doctor.Address</td>
                            <td>@doctor.Specialization.Name</td>

                            <td><a asp-action="UpdateDoctor" asp-controller="Doctor" asp-route-id="@doctor.Id" class="btn btn-warning">Güncelle</a></td>
                            <td><a onclick="return confirm('Silmek istediğinize emin misiniz?')" asp-action="DeleteDoctor" asp-controller="Doctor" asp-route-id="@doctor.Id" class="btn btn-danger">Sil</a></td>
                           
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>