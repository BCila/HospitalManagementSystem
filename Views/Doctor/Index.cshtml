@model List<Doctor>



<div class="container">
    <div class="row pt-5">
        <div class="col-sm-12">
            <form asp-action="SearchDoctor" asp-controller="Doctor" method="get" class="d-inline">
                <input name="searchValue" type="search" placeholder="ara" />
                <button type="submit"><i class="fas fa-search"></i> Ara</button>
            </form>
            <a asp-action="CreateDoctor" asp-controller="Doctor" class="btn btn-success mb-3 float-right">Yeni Doktor Ekle</a>
            <table class="table table-striped table-hover">
                <thead class="bg-dark">
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Cinsiyet</th>
                        <th>Adres</th>
                        <th>Branş</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doctor in Model)
                    {
                    <tr>
                        <td>@doctor.Name</td>
                        <td>@doctor.Surname</td>
                        <td>@doctor.Gender</td>
                        <td>@doctor.Address</td>
                        <td>@doctor.Specialization.Name</td>

                        <td><a asp-action="UpdateDoctor" asp-controller="Doctor" asp-route-id="@doctor.Id" class="btn btn-warning">Güncelle</a></td>
                        <td><a data-target="#deleteDoctor" data-toggle="modal" asp-route-id="@doctor.Id" class="btn btn-danger">Sil</a></td>
                        
    
                        @**Doktor sil modal *@
                        <div class="modal fade" id="deleteDoctor" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Doktor Sil</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Silmek istediğinize emin misiniz?
                                    </div>
                                    <div class="modal-footer">
                                        <a asp-action="DeleteDoctor" asp-controller="Doctor" asp-route-id="@doctor.Id" class="btn btn-danger">Sil</a>
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </tr>
                    }

                </tbody>
            </table>
            
        </div>
    </div>
</div>